<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miestro.google_maps.Recyclerview">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerview"
        />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="sidebottom"
            android:layout_weight="1"
            android:id="@+id/btnBottom"
            android:text="Side Bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="falldown"
            android:layout_weight="1"
            android:id="@+id/btnFalldown"
            android:text="Fall Down"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="SideRight"
            android:layout_weight="1"
            android:id="@+id/btnRight"
            android:text="Side Right"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>
