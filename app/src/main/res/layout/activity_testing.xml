<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.miestro.google_maps.Testing"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.miestro.google_maps.Testing">


        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/cover_img"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/colorheader"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/itemcolor"
                >
                <AbsoluteLayout
                    android:padding="0dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:elevation="10dp"
                    android:enabled="false"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:background="@drawable/border_reg"
                    >
                    <ImageView

                        android:scaleType="fitXY"
                        android:id="@+id/profile_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profil_pic"
                        />
                    <Button
                        android:id="@+id/btn_profile_img"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="50dp"
                        android:layout_x="0dp"
                        android:layout_y="50dp"
                        android:background="@drawable/bottom_corner"
                        android:drawableLeft="@drawable/ic_account_box_black_24dp"
                        android:text="تغير صورة الشخصية"
                        android:textColor="@color/White" />


                </AbsoluteLayout>
                <Button
                    android:layout_gravity="bottom"
                    android:id="@+id/btn_cover_img"
                    android:textColor="@color/White"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/itemcolor"
                    android:layout_marginTop="50dp"
                    android:text="تغير صورة الغلاف"
                    android:drawableLeft="@drawable/ic_account_box_black_24dp"

                    />

            </LinearLayout>

        </AbsoluteLayout>
    </LinearLayout>

</ScrollView>